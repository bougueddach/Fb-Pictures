<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7pt"
    android:background="@color/gridBackround">

    <TextView
        android:id="@+id/titleView_singleAlbumItem"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/dateView_singleAlbumItem"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/titleView_singleAlbumItem"
        android:layout_below="@+id/titleView_singleAlbumItem"
        android:text="TextView" />
</RelativeLayout>